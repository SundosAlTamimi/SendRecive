                    android:layout_marginRight="5dp"

                    android:background="@drawable/edittext_back"
                    android:text="0"
                    android:elevation="2dp"
                    android:padding="5dp"
                    android:inputType="number"

                    android:gravity="center"
                    android:textColor="@color/darkblue_"
                    android:textSize="14sp" />


            </LinearLayout>
            <LinearLayout
